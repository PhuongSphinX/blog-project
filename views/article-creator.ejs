<!DOCTYPE html>
<html>
<head>
    <title>Create Article</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css"/>
    <link href="https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css"/>
    <link href="https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css"/>
    <script src="/libs/dropzone/dist/min/dropzone.min.js"></script>
    <link href="/libs/dropzone/dist/min/dropzone.min.css" rel="stylesheet"/>
</head>
<body>
<div class="page">
    <header>
        <nav class="navbar navbar-default" style="border-radius: 0px">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="/">Blog Project</a>
                        </div>
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="/"><span class="glyphicon glyphicon-log-out"></span> Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="main-page">
        <div class="container" style="width: 80%">
            <div class="row">
                <div class="col-md-12">
                    <article>
                        <h1 style="font-weight: bold; margin: 0">Create new article</h1>
                        <hr/>
                        <div class="create-article">
                            <form method="POST"
                                  enctype="multipart/form-data"
                                  action="/articles/upload"
                                  class="dropzone dz-clickable"
                                  id="my-awesome-dropzone"
                            >
                                <div class="fallback">
                                    <input name="file" type="file" />
                                </div>
                            </form>
                            <form name="article-form" method="POST">
                                <div class="form-group">
                                    <input id="url-image" type="hidden" name="url-image" />
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Title</label>
                                    <input type="text" class="form-control" id="title" name="title" placeholder="Input new article title">
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Content</label>
                                    <textarea style="height:230px" name="content" id="content" cols="30" rows="10"></textarea>
                                </div>
                                <% if (errors !== ""){ %>
                                <% errors.forEach(function (error) { %>
                                    <div style="color: red"><%= error.msg %></div>
                                <% }); %>
                                <% } %>
                                <br/>
                                <button type="submit" class="btn btn-primary">Create</button>
                                <button type="reset" class="btn btn-default">Reset</button>
                            </form>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
<script>tinymce.init({selector: 'textarea'})</script>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.7/jquery.validate.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('form[name="article-form"]').validate({
            rules: {
                title: {
                    required: true,
                    minlength: 10,
                    maxlength: 100
                },
                content: {
                    required: true,
                    minlength: 100
                }
            },
            messages: {
                title: {
                    required: 'Please enter Title',
                    minlength: 'Your Title must be between 10 to 100 character.',
                    maxlength: 'Your Title must be between 10 to 100 character.'
                },
                content: {
                    required: 'Please enter Content',
                    minlength: 'Your Content must be at least 100 characters long.'
                }
            },
            submitHandler: function (form) {
                form.submit();
            }
        });
    });

    Dropzone.autoDiscover = false;
    $(document).ready(function () {
        const uploader = new Dropzone('#my-awesome-dropzone');
        uploader.on('success', function( file, res ){
            $('#url-image').val(res.link);
        });
    });
</script>
</body>
</html>
